{% extends "layout.njk" %}

{% block head %}
    <title>Courses - RocketSeat Junior</title>
{% endblock %}

{% block content %}
<main>
    <section class="cards">

        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="card-image-container">
                <img src="{{item.img_url}}" alt="Image {{item.id}}">
            </div>
            <div class="card-content">
                <p>{{item.description}}</p>
            </div>
            <div class="card-info">
                <p class="card-price">{{item.price}}</p>
            </div>
        </div>  
        {%endfor%}
          
    </section>
</main>
<script src="scripts.js"></script>
{%endblock%}